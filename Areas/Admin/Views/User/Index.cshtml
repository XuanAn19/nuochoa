@{
    ViewData["title"] = "Danh sách người dùng";
}
<h3>Danh sách người dùng</h3>
<a asp-action="Create" asp-action="User">Thêm người dùng</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col"> Id</th>
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
            <th scope="col">PasswordHash</th>
            <th scope="col">Phone</th>
            <th scope="col">Roles</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var userRole in Model)
        {
            <tr>
                <td>@userRole.User.Id</td>
                <td>@userRole.User.UserName</td>
                <td>@userRole.User.Email</td>
                <td>@userRole.User.PasswordHash</td
                 <td>@userRole.User.PhoneNumber</td>
                 <td>
                     @userRole.RoleName
                 </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@userRole.User.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@userRole.User.Id">Xóa</a>

                </td>
            </tr>
        }
    </tbody>
</table>
