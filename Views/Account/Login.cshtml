@model UserModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Đăng nhập tài khoản</h2>
					<div asp-validation-summary="ModelOnly" class="text-dancer"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>Tên đăng nhập</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						
						<div class="form-group">
							<label>Mật khẩu</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<button class="btn btn-default">Đăng nhập</button>
						<a asp-action="Create" asp-controller="Account">Tạo tài khoản mới</a>
					</form>
				</div><!--/login form-->
			</div>
			</div>
		</div>
	</div>
</section><!--/form-->